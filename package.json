    "@types/request-promise-native": "^1.0.17",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-plugin-import": "^2.22.0",
    "got": "^11.5.2",
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
