  "homepage": "https://github.com/toolstik/tinkoff-payment-sdk",
  "repository": "https://github.com/toolstik/tinkoff-payment-sdk.git",
  "bugs": "https://github.com/toolstik/tinkoff-payment-sdk/issues",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "peerDependencies": {
    "got": "^11.0.0",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.8"
  },
